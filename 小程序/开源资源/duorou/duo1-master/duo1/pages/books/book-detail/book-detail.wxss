@import "../star/star-template.wxss";

page {
  font-size: 16px;
}

.hr {
  align-self: center;
  margin-top: 45rpx;
  height: 1px;
  width: 90%;
  background-color: #d9d9d9;
}

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.head-img-hover {
  width: 100%;
  height: 320rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.main-title {
  font-size: 20px;
  color: #000;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.main-author {
  width: 480rpx;
  font-size: 28rpx;
  color: #000;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.coverImg {
  width: 190rpx;
  height: 274rpx;
  position: absolute;
  top: 160rpx;
  right: 30rpx;
}

.book-info {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777;
}

.book-name {
  color: green;
  font-size: 18px;
  margin-bottom: 40rpx;
}

.score {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.score text {
  font-size: 16px;
}

.score .stars {
  margin-top: 5rpx;
}

.score .stars image {
  padding-left: 3rpx;
  height: 20rpx;
  width: 20rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.tag-list {
  line-height: 40px;
  height: 40px;
}

.tag-list text {
  float: left;
}

.biaoqian {
  line-height: 20px;
  height: 40px;
}

.tags {
  padding-top: 5rpx;
}

.tag {
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 5rpx;
  margin-bottom: 0;
  margin: 5rpx;
  border: 1rpx solid green;
  border-radius: 10rpx;
  background-color: #f2f2f2;
}

.summ {
  margin: 30rpx 40rpx 0 40rpx;
}

.sumtitle {
  color: green;
  font-size: 18px;
  margin-bottom: 25rpx;
}

.summ text {
  line-height: 30px;
}

.space {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  padding: auto 0;
}

.space text {
  font-size: 26rpx;
  color: #777;
}
